include ../../libs/_libs

mixin gallery-item(title, description, link)
    .gallery-item
        a.gallery-item__link(href="#")
            +image2('assets/img', 'gallery1', ['webp', 'jpg'], 'gallery-item__preview')
            .gallery-item__content
                div.gallery-item__text
                    p.gallery-item__description.p100=description
                    h3.gallery-item__title.h200=title
                div.gallery-item__playbtn
                    span.icon-play
                
